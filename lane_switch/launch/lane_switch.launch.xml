<?xml version="1.0"?>
<launch>
    <node pkg="lane_switch" exec="lane_switch_node" name="lane_switch_node"
        output="screen">
        <!-- Parameters -->
        <param name="trigger_distance" value="20.0" />
        <param name="avoidance_duration" value="1.5" />
        <param name="transition_duration" value="4.0" />
        <param name="left_lane_position_ratio" value="0.3" />
        <param name="path_resolution" value="0.5" />
        <param name="lookahead_distance" value="20.0" />
        <param name="curve_control_offset" value="2.0" />

        <!-- Topic Remappings -->
        <remap from="path" to="/ZOE3/path_follower/setPath" />
        <remap from="prius/ground_truth" to="/ZOE3/position/map_ekf_odometry" />
    </node>
</launch>